<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Different Cycle"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/nanum_bold"/>

    <ImageView
        android:id="@+id/product_image_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_title"
        android:layout_marginTop="16dp"
        android:src="@drawable/frame_tote_bag"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/inside_image_view"
        android:layout_width="112dp"
        android:layout_height="140dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_title"
        android:layout_marginTop="102dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/a1001"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/product_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_image_view"
        android:text="canvas-a1203 + tote bag"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nanum"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_content"
        android:layout_marginTop="16dp"
        android:background="@color/gray_300"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/order_btn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="주문하기"
        android:textSize="20sp"
        android:textColor="@color/base_color"
        android:fontFamily="@font/nanum_bold"
        android:background="@color/white"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginTop="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>